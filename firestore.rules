rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user is an admin
    function isAdmin() {
      return request.auth.token.email == 'myburghjobro@gmail.com';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can perform any action on any user document
      allow read, write: if isAdmin();

      // A user can read, create, and update their own document.
      allow get, update, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for user stat history
    match /users/{userId}/statHistory/{historyId} {
        // A user can read/list their own history, admins can read anyone's
        allow get, list: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        // Admins and the user can create history entries.
        allow create: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        // Only admins can update or delete.
        allow update, delete: if isAdmin();
    }

    // Rules for the 'menu' collection
    match /menu/{mealId} {
        // Any authenticated user can read an individual meal. Admins can do anything.
        allow get: if request.auth != null;
        allow list, create, update, delete: if isAdmin();
    }

    // Rules for the 'mealPlans' collection
    match /mealPlans/{userId} {
        // A user can read their own meal plan, admins can read any plan
        allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        // Admins and users can create or update their own meal plans.
        allow create, update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
  }
}
