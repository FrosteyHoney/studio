
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role via custom claims.
    // This is secure and can be used in any rule type, including 'list'.
    function isClaimAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Helper function to check if a user is an admin by looking at their user document.
    // IMPORTANT: This CANNOT be used for 'list' rules, but is a good fallback for individual document access.
    function isDbAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // A combined function for rules that are NOT 'list' rules.
    function isAdmin() {
      return isClaimAdmin() || isDbAdmin();
    }
    
    // Public collection for connection testing. Anyone can create a document.
    // No one can read, update, or delete any documents in this collection.
    match /test_writes/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Admins can list all users (checking custom claims only).
    // Users can read/update their own profile. Admins have broader access.
    match /users/{userId} {
      allow list: if isClaimAdmin();
      allow read: if request.auth.uid == userId || isAdmin();
      allow update: if (isAdmin() && (request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isTrainer']))) || request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.id == userId;
      allow delete: if isAdmin();

      // Users can access their own stat history
      match /statHistory/{historyId} {
        allow read, create: if request.auth.uid == userId || isAdmin();
        allow update, delete: if false; // History should be immutable
      }
    }

    // Menu can be read by any authenticated user, but only modified by an admin.
    match /menu/{mealId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Meal plans can only be managed by the user themselves or by an admin.
    match /mealPlans/{userId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
    }
  }
}
