
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin by checking custom claims OR a field in their user document.
    function isAdmin() {
      // Check for a custom claim first (more secure and performant for read/write rules).
      let hasCustomClaim = request.auth.token.admin == true;
      // As a fallback for list rules, check the user's document.
      // This part of the function should only be relied on for 'list' rules.
      let hasDbFlag = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      return hasCustomClaim || hasDbFlag;
    }
    
    // Public collection for connection testing. Anyone can create a document.
    // No one can read, update, or delete any documents in this collection.
    match /test_writes/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Admins can list all users.
    // Users can only read/update their own profile.
    // They can create their own document upon signup.
    match /users/{userId} {
      allow list: if isAdmin();
      allow read: if request.auth.uid == userId || isAdmin();
      // Allow admins to update user roles, but other users can only update their own profiles.
      allow update: if (isAdmin() && request.resource.data.diff(request.resource.data).affectedKeys().hasAny(['isAdmin', 'isTrainer'])) || request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.id == userId;
      // Deleting users should be done via a server-side function, not directly by clients.
      allow delete: if isAdmin();

      // Users can access their own stat history
      match /statHistory/{historyId} {
        allow read, create: if request.auth.uid == userId || isAdmin();
        allow update, delete: if false; // History should be immutable
      }
    }

    // Menu can be read by any authenticated user, but only modified by an admin.
    match /menu/{mealId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Meal plans can only be managed by the user themselves or by an admin.
    match /mealPlans/{userId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
    }
  }
}
