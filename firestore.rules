
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone to write to the 'test/connection' document.
    // It's used by the "Test DB Connection" button to verify connectivity.
    match /test/connection {
      allow write: if true;
    }

    // By default, deny all other access. This is a secure starting point.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
