rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user is an admin
    function isAdmin() {
      return request.auth.token.email == 'myburghjobro@gmail.com';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read their own document, or an admin can read any document. Admins can list all.
      allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if isAdmin();
      // Any authenticated user can create their own user document
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can update their own document, or an admin can update any document.
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      // Only admins can delete users.
      allow delete: if isAdmin();
    }
    
    // Rules for user stat history
    match /users/{userId}/statHistory/{historyId} {
        // A user can read/list their own history, admins can read anyone's
        allow get, list: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        // Admins and the user can create history entries. Only admins can update or delete.
        allow create: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow update, delete: if isAdmin();
    }

    // Rules for the 'menu' collection
    match /menu/{mealId} {
        // Any authenticated user can read an individual meal
        allow get: if request.auth != null;
        // Admins can list all meals, and create/update/delete them
        allow list, create, update, delete: if isAdmin();
    }

    // Rules for the 'mealPlans' collection
    match /mealPlans/{userId} {
        // A user can read their own meal plan, admins can read any plan
        allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        // Admins can create or update meal plans for any user. Users can also create/update their own plan.
        allow create, update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
  }
}
